<Application
    x:Class="UTCS_Companion.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UTCS_Companion"
    xmlns:localData="using:UTCS_Companion.Data"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary xmlns:chart="using:De.TorstenMandelkow.MetroChart">

            <ResourceDictionary.MergedDictionaries>
                
                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">UTCS Lab Info</x:String>
            <Style x:Key="MinimalChartStyle" TargetType="chart:ChartBase">
                <Setter Property="Width" Value="500"/>
                <Setter Property="Height" Value="500"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
